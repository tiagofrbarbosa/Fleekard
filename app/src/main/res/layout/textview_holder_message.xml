<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatViewImage"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        app:cmv_backgroundColor="@color/chatview_user"
        app:cmv_backgroundColorPressed="@color/chatview_user_pressed"
        app:cmv_cornerRadius="@dimen/messageview_corner_radius"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left">

        <ImageView
            android:id="@+id/photoImageView"
            android:contentDescription="@string/content_desc_photo_chat"
            android:layout_width="@dimen/chat_image"
            android:layout_height="@dimen/chat_image"
            android:adjustViewBounds="true" />

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatViewUser"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        app:cmv_backgroundColor="@color/chatview_user"
        app:cmv_backgroundColorPressed="@color/chatview_user_pressed"
        app:cmv_cornerRadius="@dimen/messageview_corner_radius"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Message" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Name" />

        </LinearLayout>

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatViewImageUserConnected"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:layout_gravity="end"
        app:cmv_backgroundColor="@color/chatview_user_connected"
        app:cmv_backgroundColorPressed="@color/chatview_user_connected_pressed"
        app:cmv_cornerRadius="@dimen/messageview_corner_radius"
        app:cmv_arrowGravity="end"
        app:cmv_arrowPosition="right">

            <ImageView
                android:id="@+id/photoImageViewConnectedUser"
                android:contentDescription="@string/content_desc_photo_chat"
                android:layout_width="@dimen/chat_image"
                android:layout_height="@dimen/chat_image"
                android:layout_gravity="end"
                android:adjustViewBounds="true" />

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatViewUserConnected"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:layout_gravity="end"
        app:cmv_backgroundColor="@color/chatview_user_connected"
        app:cmv_backgroundColorPressed="@color/chatview_user_connected_pressed"
        app:cmv_cornerRadius="@dimen/messageview_corner_radius"
        app:cmv_arrowGravity="end"
        app:cmv_arrowPosition="right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageTextViewConnectedUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="Message" />

            <TextView
                android:id="@+id/nameTextViewConnectedUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Name" />

        </LinearLayout>

    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>