<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photoImageView"
        android:contentDescription="@string/content_desc_photo_chat"
        android:layout_width="@dimen/chat_image"
        android:layout_height="@dimen/chat_image"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />

    <ImageView
        android:id="@+id/photoImageViewConnectedUser"
        android:contentDescription="@string/content_desc_photo_chat"
        android:layout_width="@dimen/chat_image"
        android:layout_height="@dimen/chat_image"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/messageTextViewConnectedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/chat_message_margin_top"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message" />

    <TextView
        android:id="@+id/nameTextViewConnectedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />

</LinearLayout>