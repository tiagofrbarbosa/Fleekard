<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/notification_margin"
    android:layout_marginTop="@dimen/notification_margin"
    android:layout_marginStart="@dimen/notification_margin">

        <ImageView
            android:id="@+id/user_image"
            android:contentDescription="@string/content_desc_user_image"
            android:layout_width="@dimen/holder_notification_user_image"
            android:layout_height="@dimen/holder_notification_user_image"
            android:layout_weight="0"
            android:layout_marginEnd="@dimen/notification_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"/>

                <TextView
                    android:id="@+id/user_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"/>

                <TextView
                    android:id="@+id/user_notification_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"/>

        </LinearLayout>

</LinearLayout>